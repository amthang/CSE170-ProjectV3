<!DOCTYPE html>
<html lang="en">

<head>
    {{> head_info}}
</head>

<body>
 {{> menu_bar_index}}

    <!-- Header -->
    <header id="top" class="header">
    <a name="about"></a>
    <div class="intro-header text-vertical-center">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>WishTrip</h1>
                        <h3>A platform for your travel diaries</h3>

                        <div class="searchBar">
                            <form id="searchDestination" role="form" method="post" action="/search_results">
                            <h4>Look up a destination and get inspiration for your own trip!</h4>
                            <div class="form-group">
                                <input type="text" class="form-control city" id="city" placeholder="Destination" name="city">
                                {{#each errMsg}}
                                <br>
                                <p>{{msg}}</p>
                                {{/each}}
                            </div>
                            <button name="signin_btn" class="btn btn-default btn-lg" type="submit">Search</button>
                       <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="/create_account" class="btn btn-default btn-lg account_btn"><i class="fa fa-user fa-fw"></i> <span class="network-name">Create Account</span></a>
                            </li>
                            <li>
                                <a href="/signin" class="btn btn-default btn-lg"><i class="fa fa-home fa-fw"></i> <span class="network-name">Sign In</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
</header>
    <!-- /.intro-header -->

{{> menu_bar_script}}

</body>

</html>