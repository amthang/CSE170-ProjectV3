<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>WishTrip</title>

    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/stylish-portfolio.css" rel="stylesheet">

    <!-- Added CSS Files -->
    <link rel="stylesheet" type="text/css" href="/css/isotope.css" media="screen" />
    <link rel="stylesheet" href="/css/feature_newadditions.css" />
    <link rel="stylesheet" href="/css/custom_changes.css" />

    <!-- Custom Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    {{> menu_bar_index}}

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <br>
                <h1 class="page-header">Trips found for:
                    <small>{{city}}</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->



        <!-- Project One -->
        {{#each places}}
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="{{img}}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{name}}</h3>
                <h4>{{city}}</h4>
                <p>{{description}}</p>
                <a class="btn btn-primary" href="/view_trip_{{trip_name}}">View Trip <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>
        {{/each}}


        <hr />

        <!-- Footer -->
        <footer id="search_results_footer">
            WishTrip 2016
        </footer>

    </div>
    <!-- /.container -->
{{> menu_bar_script}}

</body>

</html>