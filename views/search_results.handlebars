<!DOCTYPE html>
<html lang="en">

<head>
    {{> head_info}}

</head>

<body>

    <!-- Navigation -->
    {{> menu_bar_index}}

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <br>
                <h1 class="page-header">Trips found for:
                    <small>{{city}}</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->



        <!-- Project One -->
        {{#each places}}
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="{{img}}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{name}}</h3>
                <h4>{{city}}</h4>
                <p>{{description}}</p>
                <a class="btn btn-primary" href="/view_trip_{{trip_name}}">View Trip <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>
        {{/each}}


        <hr />

        <!-- Footer -->
        <footer id="search_results_footer">
            WishTrip 2016
        </footer>

    </div>
    <!-- /.container -->
{{> menu_bar_script}}

</body>

</html>